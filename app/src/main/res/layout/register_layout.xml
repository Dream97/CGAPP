<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@drawable/background">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolBar"
    android:layout_height="40dp"
    android:layout_width="match_parent"
    android:background="#485"
    >

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        />

</android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:hint="  用户名"
        />
    <EditText
        android:id="@+id/register_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/id"
        android:layout_below="@id/register_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  手机号"
        />
    <EditText
        android:id="@+id/register_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pass"
        android:layout_below="@id/register_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  密码"
        />
    <EditText
        android:id="@+id/register_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pass"
        android:layout_below="@id/register_pass"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  确认密码"
        />
    <EditText
        android:id="@+id/register_verificationcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/verificationcode"
        android:layout_below="@id/register_pass2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="5dp"
        android:hint="  验证码"
        />
    <Button
        android:id="@+id/get_verification_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_pass2"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/green_btn_drawable"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="17sp"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_verification_button"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_btn_drawable"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="17sp"/>
</RelativeLayout>
