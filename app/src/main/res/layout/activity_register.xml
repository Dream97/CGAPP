<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/background2">
<android.support.v7.widget.Toolbar
    android:id="@+id/re_toolBar"
    android:layout_height="40dp"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#fff"
        />

</android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:hint="  用户名"
        />
    <EditText
        android:id="@+id/register_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/id"
        android:layout_below="@id/register_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  手机号"
        />
    <EditText
        android:id="@+id/register_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pass"
        android:layout_below="@id/register_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  密码"
        />
    <EditText
        android:id="@+id/register_pass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pass"
        android:layout_below="@id/register_pass"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:hint="  确认密码"
        />
    <RelativeLayout
        android:id="@+id/register_vc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_pass2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:drawableLeft="@drawable/verificationcode"
            android:id="@+id/register_verificationcode"
            android:layout_alignParentLeft="true"
            android:hint="验证码"
            />
        <Button
            android:id="@+id/register_getvc_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_btn_drawable"
            android:layout_toRightOf="@id/register_verificationcode"
            android:paddingLeft="3dp"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="17sp"/>
    </RelativeLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_vc_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_btn_drawable"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="17sp"/>
</RelativeLayout>
