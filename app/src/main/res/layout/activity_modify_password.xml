<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/modify_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:id="@+id/modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="忘记密码"
            android:textSize="20sp"
            android:textColor="#fff"
            />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/modify_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:drawableLeft="@drawable/user"
        android:hint="手机号码"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"/>
    <EditText
        android:id="@+id/modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/pass"
        android:layout_below="@+id/modify_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="新密码"
        />
    <EditText
        android:id="@+id/modify_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modify_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/pass"
        android:hint="确认新密码"
        />
    <RelativeLayout
        android:id="@+id/modify_vc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modify_password2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:drawableLeft="@drawable/verificationcode"
        android:id="@+id/modify_verificationcode"
        android:layout_alignParentLeft="true"
        android:hint="验证码"
        />
    <Button
        android:id="@+id/modify_getvc_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_btn_drawable"
        android:layout_toRightOf="@id/modify_verificationcode"
        android:paddingLeft="3dp"
        android:text="获取验证码"
        android:textColor="#fff"
        android:textSize="17sp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/modify_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/modify_vc_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/green_btn_drawable"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="17sp"/>

</RelativeLayout>
